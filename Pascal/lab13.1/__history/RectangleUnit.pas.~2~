unit RectangleUnit;

interface

type
  TRectangle = class
  private
    length, width: Integer;

  public
    // Конструктор
    constructor Create(aLength, aWidth: Integer);
    // Деструктор
    destructor Destroy; override;


    procedure DisplayInfo;
  end;

implementation

constructor TRectangle.Create(aLength, aWidth: Integer);
begin
  length := aLength;
  width := aWidth;
end;

destructor TRectangle.Destroy;
begin
  inherited;
end;

procedure TRectangle.DisplayInfo;
begin
  Writeln('Длина: ', length);
  Writeln('Ширина: ', width);
end;

end.
